@import url('https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700&display=swap');

html, body
  font-size: 62.5%
  color $primary
  font-weight: 400
  line-height: 1.2
  font-family: $font-default, Helvetica, Arial, sans-serif

input, textarea, select, button
  font-family: $font-default, Helvetica, Arial, sans-serif

img[data-object-fit='contain']
  object-fit: contain

img[data-object-fit='cover']
  object-fit: cover

img[data-object-fit='cover'], img[data-object-fit='contain']
  width: 100%
  height: 100%

#root
  font-size 1.4rem

h1, h2
  font-size 2.4rem
  line-height: 1.1
h3
  font-size 2rem
  line-height: 1.1
h1
  font-weight: 700
h2
  font-weight: 600

.ib
  position: fixed
  left 0
  top: 0
  width: 100%
  height: 100%
  pointer-events none
  &:before
    ps()
    left: 0
    top: 0
    width: 100%
    height: 100%
    background rgba($dark-blue, 0.5)
    opacity 0
    tro(.3s)
  &._open
    pointer-events all
    &:before
      opacity: 1;
    .ib__inner
      transform translateX(0)
  &__inner
    position: absolute
    right: 0
    top: 0
    width: 68.9rem
    max-width 100%
    padding 0 0 2.5rem
    background-color: $white
    box-shadow: 0 12px 44px rgba(41, 22, 138, 0.12);
    border-top-left-radius: $radius
    border-bottom-left-radius: $radius
    transform translateX(100%)
    trt(.3s)
  &__content
    height: calc(100vh - 8.9rem)
    overflow-y auto
    customScroll()
  &__head
    padding: 1.5rem 3rem
    border-bottom: 1px solid $light-blue
    .icon-cross
      width: 1.4rem
      height: 1.4rem
      fill $dark-blue
  &__btn
    &-close
      padding: 1rem
    &-update
      display: block
      width: 100%
      height: 4rem
      font-size 1.2rem
      font-weight: 600
      color $white
      background: $dark-blue
      border-radius: 2rem
    &-close
    &-update
      .desktop &
        tro()
        &:hover
          opacity .7
  &__update
    padding 0 3.2rem
  &__img
    display: block
    flex-shrink 0
    width: 8.4rem
    height: 8.4rem
    margin-right: 2rem
  &__get
    padding: 2rem 3.2rem 0
  &__item
    padding: 1.6rem 0 5rem
    &+&
      position: relative
      &:before
        ps()
        width: 10.8rem;
        height: 1px
        top: 0
        left: 0
        background $light-blue
    &-top
      display: flex
      align-items: flex-end
      justify-content: space-between
      margin-bottom: 2rem
    &-date
      font-weight: 600
      line-height: 1.3
      color $gray
      margin-left: 2rem
    &-show
      padding-top: 56.6%
      position: relative
      &>div
        position: absolute
        left: 0
        top: 0
    p
      margin-top: 2.1rem
    h4
      margin-top: 3rem
    ul
      margin-top: 2rem
    li
      margin-top: .5rem
      position: relative
      &:before
        display: inline
        content '- '

.h
  background $dark-blue
  &__inner
    width 100%
    height 8.6rem
    display flex
    justify-content: space-between;
    align-items center
  &__item
    &._center
      margin: 0 auto
      padding 0 1.5rem
  &__note
    height: 3.5rem
    position: relative
    padding: 5px
    cursor: pointer
    &-qty
      display: block
      position: absolute
      top: 0
      right: 0
      width: 1.5rem
      height: 1.5rem
      border-radius 50%
      background-color: #F20505
      font-size 1.2rem
      line-height: 1.5rem
      text-align: center
      color $white
  .icon-bill
    width: 2.4rem
    height: 2.5rem
    color $light-blue

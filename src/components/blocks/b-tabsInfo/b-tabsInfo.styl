.b-tabsInfo
  display: flex
  flex-direction: column
  &__tabs
    background: rgba(41, 22, 138, 0.04)
  &__nav
    display: flex
  &__btn
    color $blue
    font-size: 1.2rem
    line-height: 1.5rem
    padding: 1.3rem 1.2rem
  &__item
    height 25.8rem
    overflow-y auto
    customScroll()
    padding-right: 1rem
    h3
      margin-top: 2rem
    p
      margin-top 2.1rem
    a
      color $blue


.b-card
  position: relative
  &__inner
    padding 1.6rem 1.6rem
    display block
    background: $white
    border: 1px solid $light-blue
    border-radius: $radius
    cursor: pointer
    .desktop &
      trbsh()
      &:hover
        border-color $white
        box-shadow 0 12px 44px rgba(90, 87, 103, 0.2);
  h1
    max-width: 100%
    overflow hidden
    text-overflow ellipsis
    color $dark-blue
  &__content
    display: flex
    align-items: center
    min-height 15rem
  &__img
    width: 8.2rem
    height: 8.2rem
    margin-right: 2rem

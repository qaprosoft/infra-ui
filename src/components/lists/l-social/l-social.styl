.l-social
  &__list
    display: flex
    margin: 0 -.4rem
  &__item
    padding 0 .4rem
    flex-shrink 0
  &__link
    display: flex
    align-items: center
    justify-content: center
    width: 3.2rem
    height: 3.2rem
    border-radius 50%
    border 1px solid $light-blue
    .desktop &
      trb()
      &:hover
        border-color $dark-blue
  .icon
    width: 2rem
    height: 2rem